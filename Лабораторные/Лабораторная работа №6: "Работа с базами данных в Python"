def main():
    while True:
        print("\n=== –£–Ω–∏–≤–µ—Ä—Å–∏—Ç–µ—Ç—Å–∫–∏–π —É—á–µ—Ç ===")
        print("1. –î–æ–±–∞–≤–∏—Ç—å —Å—Ç—É–¥–µ–Ω—Ç–∞")
        print("2. –ü—Ä–æ—Å–º–æ—Ç—Ä–µ—Ç—å –≤—Å–µ—Ö —Å—Ç—É–¥–µ–Ω—Ç–æ–≤") 
        print("3. –ù–∞–π—Ç–∏ —Å—Ç—É–¥–µ–Ω—Ç–∞ –ø–æ —Ñ–∞–º–∏–ª–∏–∏")
        print("4. –û–±–Ω–æ–≤–∏—Ç—å –æ—Ü–µ–Ω–∫—É —Å—Ç—É–¥–µ–Ω—Ç–∞")
        print("5. –£–¥–∞–ª–∏—Ç—å —Å—Ç—É–¥–µ–Ω—Ç–∞")
        print("6. –ü–æ–∫–∞–∑–∞—Ç—å —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫—É")
        print("7. –í—ã—Ö–æ–¥")
        
        choice = input("–í—ã–±–µ—Ä–∏—Ç–µ –¥–µ–π—Å—Ç–≤–∏–µ: ")
        
        if choice == '1':
            add_student_interactive()
        elif choice == '2':
            display_all_students()
        # ... –∏ —Ç–∞–∫ –¥–∞–ª–µ–µ
        elif choice == '7':
            break
        else:
            print("–ù–µ–≤–µ—Ä–Ω—ã–π –≤—ã–±–æ—Ä!")

def add_student_interactive():
    """–ò–Ω—Ç–µ—Ä–∞–∫—Ç–∏–≤–Ω–æ–µ –¥–æ–±–∞–≤–ª–µ–Ω–∏–µ —Å—Ç—É–¥–µ–Ω—Ç–∞"""
    print("\n--- –î–æ–±–∞–≤–ª–µ–Ω–∏–µ —Å—Ç—É–¥–µ–Ω—Ç–∞ ---")
    first_name = input("–ò–º—è: ")
    last_name = input("–§–∞–º–∏–ª–∏—è: ")
    group_name = input("–ì—Ä—É–ø–ø–∞: ")
    
    # –í–∞–ª–∏–¥–∞—Ü–∏—è –≥–æ–¥–∞ –ø–æ—Å—Ç—É–ø–ª–µ–Ω–∏—è
    while True:
        try:
            admission_year = int(input("–ì–æ–¥ –ø–æ—Å—Ç—É–ø–ª–µ–Ω–∏—è: "))
            if 2000 <= admission_year <= 2030:
                break
            else:
                print("–ì–æ–¥ –¥–æ–ª–∂–µ–Ω –±—ã—Ç—å –º–µ–∂–¥—É 2000 –∏ 2030")
        except ValueError:
            print("–í–≤–µ–¥–∏—Ç–µ –∫–æ—Ä—Ä–µ–∫—Ç–Ω—ã–π –≥–æ–¥")
    
    # –î–æ–±–∞–≤–ª–µ–Ω–∏–µ –≤ –±–∞–∑—É –¥–∞–Ω–Ω—ã—Ö
    with UniversityDB('university.db') as db:
        success = db.add_student(first_name, last_name, group_name, admission_year)
        if success:
            print("–°—Ç—É–¥–µ–Ω—Ç —É—Å–ø–µ—à–Ω–æ –¥–æ–±–∞–≤–ª–µ–Ω!")
        else:
            print("–û—à–∏–±–∫–∞ –ø—Ä–∏ –¥–æ–±–∞–≤–ª–µ–Ω–∏–∏ —Å—Ç—É–¥–µ–Ω—Ç–∞")
```
